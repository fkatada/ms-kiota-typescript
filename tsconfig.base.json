{
    "compilerOptions": {
        "importHelpers": true,
        "noEmitOnError": true,
        "moduleResolution": "Node",
        "strict": true,
        "skipLibCheck": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "composite": true,
        "module": "ES6",
        "target": "ES2017",
        "lib": [
            "dom",
            "es5",
            "es6",
            "DOM.Iterable"
        ],
        "outDir": "dist/es",
    },
    "references": [
        {
            "path": "./packages/abstractions/tsconfig.json"
        },
        {
            "path": "./packages/serialization/form/tsconfig.json"
        },
        {
            "path": "./packages/serialization/json/tsconfig.json"
        },
        {
            "path": "./packages/serialization/text/tsconfig.json"
        },
        {
            "path": "./packages/http/fetch/tsconfig.json"
        },
        {
            "path": "./packages/authentication/azure/tsconfig.json"
        },
        {
            "path": "./packages/authentication/spfx/tsconfig.json"
        }
    ],
    "exclude": [
        "node_modules",
        "dist",
        "tests",
        "./test/**/*.ts"
    ],
    "tsc-alias": {
      "resolveFullPaths": true,
      "verbose": false
    }
}
